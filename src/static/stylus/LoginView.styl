.login-view-container
    background #575515
    position absolute
    top 0
    left 0
    right 0
    bottom 0

.LoginView
    max-width 400px
    padding 30px
    box-sizing border-box
    text-align center
    margin auto

    .title
        font-size 72px
        text-align left
        margin auto
        position relative
        padding-left 50px

    form
        margin-bottom 10px

    input
        display block
        width 100%
        height 25px
        border 1px solid #ccc
        border-radius 2px
        margin 10px 0
        font-family inherit
        padding 0px 10px
        box-sizing border-box
        background #ffffff

        &[type=submit]
            width 100px
            margin auto

.app-header.app-header-LoginView
    background none

    .app-title
        text-align center
        font-size 64px
        margin-top 100px
        color #D6CA82
        display block
        